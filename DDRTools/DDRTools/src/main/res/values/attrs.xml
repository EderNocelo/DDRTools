<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RotateLoader">
        <attr name="rotateStrokeWidth" format="dimension"/>
        <attr name="rotateColor" format="integer|reference"/>
        <attr name="rotateShadowPosition" format="integer"/>
        <attr name="rotateSpeed" format="integer"/>
        <attr name="rotateAutoPlay" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="LimitedRecyclerView">
        <attr name="maxHeightLimit" format="integer"/>
    </declare-styleable>

    <declare-styleable name="DDRItemHolderView">
        <!-- TITLE STYLE -->
        <attr name="holderTextStyle" format="reference"/>
        <attr name="holderText" format="reference"/>
        <!-- ICON -->
        <attr name="holderIcon" format="integer|reference"/>
        <attr name="holderIconColor" format="integer|reference"/>
        <attr name="holderBackground" format="reference"/>
    </declare-styleable>

    <declare-styleable name="DDRItemContentView">
        <!-- TITLE STYLE -->
        <attr name="itemTitleTextStyle" format="reference"/>
        <attr name="itemTitleText" format="reference"/>
        <!-- SUBTITLE STYLE -->
        <attr name="itemSubtitleTextStyle" format="reference"/>
        <attr name="itemSubtitleText" format="reference"/>
        <!-- ICON -->
        <attr name="itemIcon" format="reference"/>
        <attr name="itemIconColor" format="reference"/>
        <attr name="itemBackground" format="reference"/>
    </declare-styleable>

    <declare-styleable name="DDRTitleDescriptionView">
        <!-- TITLE ATTRIBUTES -->
        <attr name="titleTextStyle" format="reference"/>
        <attr name="titleText" format="reference"/>
        <!-- SUBTITLE ATTRIBUTES -->
        <attr name="subtitleTextStyle" format="reference"/>
        <attr name="subtitleText" format="reference"/>
    </declare-styleable>

</resources>