    <style name="snackBarStyle">
        <item name="android:textColor">@android:color/holo_blue_bright</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="buttonCancelTheme">
        <item name="android:backgroundTint">@color/teal_200</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">@font/source_sans_pro_semi_bold</item>
    </style>

    <style name="buttonAcceptTheme">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:text">Accept</item>
    </style>

    <style name="itemPickerStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/source_sans_pro_semi_bold</item>
    </style>

