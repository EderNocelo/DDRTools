<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abc_vector_test">

    <com.mx.ddrtools.components.views.DDRTitleDescriptionView
        android:id="@+id/supplyParams"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:subtitleTextStyle="@style/ProjectParamsStyle_subtitle"
        app:titleTextStyle="@style/ProjectParamsStyle_title"/>

    <com.mx.ddrtools.components.views.RotateLoader
        android:id="@+id/rotate"
        android:background="@color/black"
        android:layout_centerInParent="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:rotateSpeed="11"
        app:rotateStrokeWidth="7dp"/>

</RelativeLayout>